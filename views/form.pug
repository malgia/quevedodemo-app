extends layout

block content
    -data = data || {}

    if errors
        ul
            for error in errors
                li= error.msg

    div(class="row")
        div(class="col-xs-12 col-md-6")
            h2 Agregar Moto
            form(action="." method="POST")

                label(for="plateid") Placa:
                input(
                type="text"
                id="plateid"
                name="plateid"
                value=data.plateid
                class="form-control"
                )

                label(for="shortid") Placa Corta:
                input(
                type="text"
                id="shortid"
                name="shortid"
                value=data.shortid
                class="form-control"
                )

                label(for="name") Nombre:
                input(
                type="text"
                id="name"
                name="name"
                value=data.name
                class="form-control"
                )

                label(for="expiredate") Caducidad:
                input(
                type="text"
                id="expiredate"
                name="expiredate"
                value=data.expiredate
                class="form-control"
                )

                label(for="passengers") Ocupantes:
                input(
                type="text"
                id="passengers"
                name="passengers"
                value=data.passengers
                class="form-control"
                )

                input(type="submit" value="Submit" class="btn btn-lg btn-primary btn-block")

        div(class="col-xs-12 col-md-6")
            h2 Buscar Moto
            select(id="availablecams")
            a(class="btn btn-lg btn-primary btn-block" href="#" onclick="initCamQR();") Escanear QR
            h2 Detectar Motos
            select(id="availablecams2")
            a(class="btn btn-lg btn-primary btn-block" href="#" onclick="initCamDetect();") Detectar
            video(id="preview")
            img(id="screenshot" class="hidden")
            img(id="proccesed")
